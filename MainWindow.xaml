<Window
    x:Class="ComboBox_SelectionValue.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource SystemBaseLowColor}">
        <ComboBox x:Name="ComboBox_1"
                  ItemsSource="{x:Bind comboBoxItems}"
                  DisplayMemberPath="ListValue"
                  SelectedValuePath="SelectionValue"
                  SelectionChanged="ComboBox_1_SelectionChanged"/>
    </Grid>

</Window>
